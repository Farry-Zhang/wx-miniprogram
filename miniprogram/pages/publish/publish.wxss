.container {
    padding: 20px;
  }
  
  input {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    margin-bottom: 24rpx;
    box-sizing: border-box;
  }
  .image-picker {
    margin-bottom: 24rpx;
  }
  .preview {
    width: 100%;
    height: 200rpx;
    border-radius: 16rpx;
    margin-top: 12rpx;
  }
  button[type=primary] {
    background-color: #ba5dd6;
    color: white;
    font-size: 28rpx;
    padding: 14rpx 0;
    border-radius: 12rpx;
    width: 100%;
  }
  
  
  
  