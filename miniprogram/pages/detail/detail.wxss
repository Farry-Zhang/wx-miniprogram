.container {
  padding: 20rpx;
  background-color: #fff;
  min-height: 100vh;
}

.product-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  background-color: #f0f0f0;
}

.info {
  font-size: 28rpx;
  color: #333;
}

.info-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: row;
}

.label {
  font-weight: bold;
  width: 120rpx;
  color: #666;
}

.value {
  flex: 1;
  color: #000;
}

  